<div class="container">
  <div class="jumbotron border">
    <h1>Burgers! Burgers!! Burgers!!!</h1>
  </div>

  <div class="row">

    <div class="col-sm-3">
      <h2>Ready To eat!</h2>
      <ul>
        {{#each burgers}}
        {{#unless eatan}}
        {{> burgers/burger-block eat=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-sm-3 offset-sm-6">
      <h2>Ready To digest!</h2>
      <ul>
        {{#each burgers}}
        {{#if eatan}}
        {{> burgers/burger-block eat=false}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>


<h2>Add Your Own Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="eatan">Fresh or Digesting?</label><br>
    <input type="radio" name="eatan" value="1" checked> Digesting<br>
    <input type="radio" name="eatan" value="0"> Fresh
  </div>

  <button type="submit">Add Burger</button>
</form>
</div>